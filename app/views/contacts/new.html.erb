



    <%= simple_form_for @contact do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :phone, label: "Phone (optional)" %>
      <%= f.association :subjects, as: :check_boxes, label: "Subject(s)" %>
      <%= f.association :grades, label: "Student grade" %>
      <%= f.input :message, label: "Message (optional)" %>
      <%= f.button :submit, "Submit" %>
    <% end %>
