
@import "subjects";
@import "form";
@import "contact";
@import "thanks";
@import "footer";


body {
  a {
    text-decoration: none;
    color: black;
  }
  background-image: url(asset_path('nyc.jpg'));
    background-attachment: fixed;
    background-size: cover;
}

div.nyc {
 .nyc-photo {
   display: block;
   width: 60%;
 }
}

header {
  font-family: "Almarai";
  align-items: center;


  h1 {
    font-size: 56px;
  }

  nav {
    margin-left: 160px;
    margin-right: 160px;
    display: flex;
    justify-content: space-between;
    align-items: center;

    div.nav-links {
      // font-size: 21px;
    }
  }

  a {
    margin-right: 56px;
    text-transform: uppercase;
  }

  span {
    margin-right: 56px;
    text-transform: uppercase;
  }

  div.inline-flex {
    display: inline-block;
  }

  div.contact-box {
    border: 1px solid black;
    background-color: black;
    margin-right: 0;
    padding: 8px 16px;
    text-align: center;
    display: inline-block;
    transition: 0.6s;

    a {
      margin-right: 0;
      color: white;
    }

    &:hover {
      // opacity: 0.6;
    }
  }
}


.popUp {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
  background: rgba(4, 11, 17, 0.85);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  visibility: hidden;
  opacity: 0;

  &.active {
    visibility: visible;
    opacity: 1;
  }


  .close {

     position: absolute;
     top: 50px;
     right: 195px;
     cursor: pointer;
   }
 }
